@model ListPostDto
<h4 class="text-center">QUẢN LÝ BÀI VIẾT</h4>
@if (Model?.Posts.Count > 0)
{
    <div id="">
        <table>
            <thead>
                <tr>
                    <th>Tiêu đề</th>
                    <th>Ngày đăng</th>
                    <th>Tác giả</th>
                    <th>Phê duyệt?</th>
                    <th>Đã xóa?</th>
                    <th style="width: 20%;"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (Post post in Model.Posts)
                {
                    <tr>
                        <td>
                            <a asp-action="Detail" asp-controller="Post" asp-area="" asp-route-id="@post.Id" target="_blank">@post.Title</a>
                        </td>
                        <td>@post.DateCreated.ToShortDateString()</td>
                        <td>@post.Author.Username</td>
                        <td>
                            @(post.IsActive ? "Đã phê duyệt" : "")
                        </td>
                        <td>
                            @(post.IsDeleted ? "Đã xóa" : "")
                        </td>
                        <td>
                            <a asp-action="Approve" asp-controller="Post" asp-route-id="@post.Id" class="btn btn-sm btn-primary">
                                @if (!post.IsActive)
                                {
                                    <span>Duyệt đăng</span>
                                }
                                else
                                {
                                    <span>Hủy duyệt</span>
                                }
                            </a>
                            <a asp-action="Delete" asp-controller="Post" asp-route-id="@post.Id" class="btn btn-sm btn-danger">
                                @if (!post.IsDeleted)
                                {
                                    <span>Xóa</span>
                                }
                                else
                                {
                                    <span>Khôi phục</span>
                                }
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
@if (Model?.TotalPage > 1)
{
    <div class="text-center">
        <pagination total-page="@Model.TotalPage" current-page="@Context.Request.Query["page"].FirstOrDefault()" url="/manage/post/index?{0}"></pagination>
    </div>

}
