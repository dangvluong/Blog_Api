@model IOrderedEnumerable<Comment>
@if (Model.Count() > 0)
{
    <div class="container">
        <table>
            <thead>
                <tr>
                    <th>Date Create</th>
                    <th>CommentId</th>
                    <th>Comment Content</th>
                    <th>Comment's Author</th>
                    <th>Post Id</th>
                    <th>Comment Parent Id</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (Comment comment in Model)
                {
                    <tr>
                        <td>@comment.DateCreate.ToShortDateString()</td>
                        <td>@comment.Id</td>
                        <td>@comment.Content</td>
                        <td>@comment.AuthorId</td>
                        <td>@comment.PostId</td>
                        <td>@comment.CommentParentId</td>
                        <td>                            
                            <a asp-area="Dashboard" asp-controller="Comment" asp-action="Delete" asp-route-id="@comment.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
