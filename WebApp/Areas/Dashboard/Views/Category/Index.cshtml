@model List<Category>
@if (Model.Count > 0)
{
    <table>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>IsDeleted</th>
            <th></th>
        </tr>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.Id</td>
                <td>@category.Name</td>
                <td>@category.IsDeleted</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@category.Id">Edit</a>
                    <a asp-action="Delete" asp-route-id="@category.Id">Delete</a>                   
                </td>
            </tr>
        }
    </table>
}