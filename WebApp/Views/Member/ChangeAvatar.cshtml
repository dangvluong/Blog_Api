@model ChangeAvatarModel
@{
    Layout = "_MemberLayout";
}
<h4 class="text-center">ĐỔI HÌNH ĐẠI DIỆN</h4>
<div class="contact-grids mt-3">
    <form method="post" class="signin-form" enctype="multipart/form-data">
        <div asp-validation-summary="All"></div>
        <input type="hidden" asp-for="MemberId" />
        <div class="input-grids">
            <label asp-for="AvatarUpload"></label>
            <input type="file" asp-for="AvatarUpload" accept="image/png, image/gif, image/jpeg,image/jpg" />
        </div>
        <div class="d-flex my-3">
            <button class="btn btn-style btn-outline mx-auto">Save change</button>
        </div>
    </form>
</div>
