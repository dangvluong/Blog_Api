@model int
<main id="primary" class="site-main">
    <!-- error section -->
    <section id="error" class="w3l-error py-5">
        <div class="container py-md-4 ErrorpageBlock">
            <div class="row align-items-center">
                <div class="col-md-5 col-7 mx-auto">
                    <img src="/images/error.png"
                         alt="" class="rounded-circle img-fluid">
                </div>
                <div class="col-md-7 col-sm-12 pl-5">
                    @*<h1 class="error-title">403</h1>*@
                    <h2>Error code @Model !!!</h2>
                    <p class="mt-3">
                        @ViewBag.ErrorMessage
                    </p>
                    <a href="/" class="btn btn-style btn-outline mt-4">
                        Trở lại trang chủ
                    </a>

                </div>
            </div>
        </div>
    </section>
    <!-- //error section -->
</main>