@model Post
<nav id="breadcrumbs" class="breadcrumbs">
    <div class="container page-wrapper AllBreadcrumbs">
        <a asp-action="Index" asp-controller="Home" rel="homepage">Home</a>&nbsp;&nbsp;»&nbsp;&nbsp;
        <a asp-action="Index" asp-controller="Post" rel="post">Post</a>
        &nbsp;&nbsp;»&nbsp;&nbsp;
        Create new post
    </div>
</nav>
<div class="container my-3">   
    <div class="contact-grids">
        <form method="post" class="signin-form">
            <div asp-validation-summary="All"></div>
            <div class="input-grids">
                <label asp-for="Title"></label>
                <input type="text" class="contact-input" asp-for="Title" />
            </div>
            <div>
                <label asp-for="CategoryId"></label>
                <select asp-for="CategoryId" asp-items="@ViewBag.categories" class="form-control">
                </select>
            </div>
            <div class="form-input">
                <label asp-for="Description"></label>
                <textarea asp-for="Description"></textarea>
            </div>
            <div class="form-input">
                <label asp-for="Content"></label>
                <textarea asp-for="Content" rows="10"></textarea>
            </div>
            <div class="d-flex my-3">
                <button class="btn btn-style btn-outline mx-auto">Create</button>
            </div>
        </form>
    </div>
</div>
@{ 
    var summerNote = new SummerNoteViewModel("#Content");
}
<partial name="_SummerNoteEditor" model="@summerNote" />