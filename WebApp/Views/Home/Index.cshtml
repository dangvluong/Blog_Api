@model HomeIndexViewModel
<div class="w3l-homeblock1 pt-5">
    <div class="container pt-lg-5 pt-md-4 HomePageFeaturedPosts">
        <!-- block -->

        <div class="BlogHomeLayout">
            <div class="row my-3">
                <div class="col-md-9">
                    <h3 class="section-title-left">
                        Featured posts
                    </h3>
                </div>
                <div class="col-md-3">
                    <a asp-action="Create" asp-controller="Post" asp-area="" class="btn btn-style btn-outline ml-auto">Create new post</a>
                </div>
            </div>
            <partial name="_FeaturedPosts" model="@Model.FeaturedPosts" />

        </div>
    </div>

    <div class="w3l-homeblock2 w3l-homeblock6 pt-5">
        <div class="container py-lg-5 py-md-4 HomePageHighlights">
            <!-- block -->
            <partial name="_TodayHighlightPosts" model="@Model.TodayHighlightPosts" />              
        </div>

        <!-- HomePage Today Highlights Section -->
        <!-- HomePage Most Recent Section -->

        <div class="container">
            <div class="row HomePageRecent">
                <div class="col-lg-9 most-recent">
                    <partial name="_MostRecentPosts" model="@Model.MostRecentPosts" />
                </div>
                <div id="recent-posts-widget-with-thumbnails-5"
                     class="widget col-lg-3 col-md-12 col-sm-12 recent-posts-widget-with-thumbnails">
                    @await Component.InvokeAsync("TrendingSideBar") 
                    <!-- .rpwwt-widget -->
                </div>
            </div>
        </div>
        <!-- HomePage Most Recent Section -->
       
    </div>
</div>