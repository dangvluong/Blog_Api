@model ResetPasswordModel
<div class="container">
    <div class="row">
        <div class="col-3"></div>
        <div class="contact-grids col-6">
            <div class="d-flex mt-5">
                <h4 class="mx-auto">ĐẶT LẠI MẬT KHẨU</h4>
            </div>
            <form method="post" class="signin-form">
                <div asp-validation-summary="All"></div>
                <input type="hidden" asp-for="Email" />
                <input type="hidden" asp-for="Token" />
                <div class="input-grids">
                    <label asp-for="NewPassword"></label>
                    <input type="password" class="contact-input" asp-for="NewPassword" />
                </div>
                <div class="input-grids">
                    <label asp-for="ConfirmNewPassword"></label>
                    <input type="password" class="contact-input" asp-for="ConfirmNewPassword" />
                </div>               
                <div class="d-flex my-3 flex-column">
                    <button class="btn btn-style btn-outline mx-auto">Cập nhật</button>                
                </div>
            </form>
        </div>
    </div>
</div>